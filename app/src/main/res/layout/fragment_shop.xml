<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.fragment_shop.ShopFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_setting"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/help"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/tlmeh"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@id/text_show_help"
                        android:layout_width="@dimen/_180sdp"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/ds"
                        android:text="@string/details_shop"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/shap_input"
                        android:backgroundTint="@color/part_white"
                        android:layout_marginTop="@dimen/_25sdp"
                        app:layout_constraintBottom_toTopOf="@+id/card_image_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/help" />
                    <TextView
                        android:id="@+id/text_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:fontFamily="@font/we"
                        android:text="@string/shop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/card_image_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/count_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/coin"
                        android:textColor="@color/color_coin"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white_to_black"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_shop">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_shop_image_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/back_ground_level"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/v1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <View
                                android:id="@+id/v1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_shop_image_1" />


                            <ImageView
                                android:id="@+id/image_level_1"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/back_level_1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v1" />

                            <TextView
                                android:id="@+id/btn_save_back_level_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/image_level_1" />


                            <ImageView
                                android:id="@+id/image_level_2"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/back_level_2"
                                app:layout_constraintStart_toEndOf="@+id/image_level_1"
                                app:layout_constraintTop_toBottomOf="@id/v1" />


                            <TextView
                                android:id="@+id/get_back_level_2"
                                style="@style/TextShadowStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_24sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/get_5"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/image_level_2"
                                app:layout_constraintEnd_toEndOf="@id/image_level_2"
                                app:layout_constraintStart_toStartOf="@id/image_level_2"
                                app:layout_constraintTop_toTopOf="@id/image_level_2" />

                            <TextView
                                android:id="@+id/btn_save_back_level_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/btn_save_back_level_3"
                                app:layout_constraintStart_toEndOf="@+id/btn_save_back_level_1"
                                app:layout_constraintTop_toBottomOf="@+id/image_level_2" />


                            <ImageView
                                android:id="@+id/image_level_3"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/back_level_3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_level_2"
                                app:layout_constraintTop_toBottomOf="@id/v1" />

                            <TextView
                                android:id="@+id/get_back_level_3"
                                style="@style/TextShadowStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_24sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/get_10"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/image_level_3"
                                app:layout_constraintEnd_toEndOf="@id/image_level_3"
                                app:layout_constraintStart_toStartOf="@id/image_level_3"
                                app:layout_constraintTop_toTopOf="@id/image_level_3" />


                            <TextView
                                android:id="@+id/btn_save_back_level_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/image_level_3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white_to_black"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_image_1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_shop_image_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/back_ground_game"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/v2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <View
                                android:id="@+id/v2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_shop_image_2" />


                            <ImageView
                                android:id="@+id/image_game_1"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/game_q"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v2" />

                            <TextView
                                android:id="@+id/btn_save_back_game_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/image_game_1" />


                            <ImageView
                                android:id="@+id/image_game_2"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/back_geme_2"
                                app:layout_constraintStart_toEndOf="@+id/image_game_1"
                                app:layout_constraintTop_toBottomOf="@id/v2" />


                            <TextView
                                android:id="@+id/get_back_game_2"
                                style="@style/TextShadowStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_24sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/get_5"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/image_game_2"
                                app:layout_constraintEnd_toEndOf="@id/image_game_2"
                                app:layout_constraintStart_toStartOf="@id/image_game_2"
                                app:layout_constraintTop_toTopOf="@id/image_game_2" />

                            <TextView
                                android:id="@+id/btn_save_back_game_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/btn_save_back_game_3"
                                app:layout_constraintStart_toEndOf="@+id/btn_save_back_game_1"
                                app:layout_constraintTop_toBottomOf="@+id/image_game_2" />


                            <ImageView
                                android:id="@+id/image_game_3"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_180sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:src="@drawable/back_game_3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_game_2"
                                app:layout_constraintTop_toBottomOf="@id/v2" />

                            <TextView
                                android:id="@+id/get_back_game_3"
                                style="@style/TextShadowStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_24sdp"
                                android:fontFamily="@font/we"
                                android:text="@string/get_10"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/image_game_3"
                                app:layout_constraintEnd_toEndOf="@id/image_game_3"
                                app:layout_constraintStart_toStartOf="@id/image_game_3"
                                app:layout_constraintTop_toTopOf="@id/image_game_3" />


                            <TextView
                                android:id="@+id/btn_save_back_game_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_24sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/shap_input"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/we"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/select"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/image_game_3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>